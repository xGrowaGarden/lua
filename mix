-- GUI setup (Roblox example)
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local LoadingBar = Instance.new("Frame")
local LoadingText = Instance.new("TextLabel")

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.Name = "GrowAGardenGUI"

Frame.Size = UDim2.new(0.6, 0, 0.1, 0)
Frame.Position = UDim2.new(0.2, 0, 0.45, 0)
Frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
Frame.Parent = ScreenGui

LoadingBar.Size = UDim2.new(0, 0, 1, 0)
LoadingBar.Position = UDim2.new(0, 0, 0, 0)
LoadingBar.BackgroundColor3 = Color3.fromRGB(100, 255, 100)
LoadingBar.Parent = Frame

LoadingText.Size = UDim2.new(1, 0, 1, 0)
LoadingText.Position = UDim2.new(0, 0, 0, 0)
LoadingText.Text = "ðŸŒ´ GROW A GARDEN ðŸŒ´\nScript is loading, please wait..."
LoadingText.TextScaled = true
LoadingText.BackgroundTransparency = 1
LoadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
LoadingText.Parent = Frame

-- Loading bar animation
local progress = 0
while progress < 1 do
    progress = progress + 0.01
    LoadingBar.Size = UDim2.new(progress, 0, 1, 0)
    LoadingText.Text = "ðŸŒ´ GROW A GARDEN ðŸŒ´\nScript is loading... " .. math.floor(progress*100) .. "%"
    wait(0.05)
end

LoadingText.Text = "ðŸŒ´ Loaded! ðŸŒ´"
