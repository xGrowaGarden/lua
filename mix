-- Full-screen loading screen
local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = player:WaitForChild("PlayerGui")

-- Full-screen background
local background = Instance.new("Frame")
background.Size = UDim2.new(1, 0, 1, 0) -- 100% width and height
background.Position = UDim2.new(0, 0, 0, 0)
background.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black background
background.Parent = gui

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0.1, 0)
title.Position = UDim2.new(0, 0, 0.3, 0)
title.Text = "ðŸŒ´ GROW A GARDEN ðŸŒ´"
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Font = Enum.Font.SourceSansBold
title.Parent = background

-- Loading message
local message = Instance.new("TextLabel")
message.Size = UDim2.new(1, 0, 0.05, 0)
message.Position = UDim2.new(0, 0, 0.42, 0)
message.Text = "Script is loading, please wait for a while..."
message.TextScaled = true
message.TextColor3 = Color3.fromRGB(255, 255, 255)
message.BackgroundTransparency = 1
message.Font = Enum.Font.SourceSans
message.Parent = background

-- Loading bar background
local barBackground = Instance.new("Frame")
barBackground.Size = UDim2.new(0.6, 0, 0.05, 0)
barBackground.Position = UDim2.new(0.2, 0, 0.5, 0)
barBackground.BackgroundColor3 = Color3.fromRGB(180, 180, 180)
barBackground.Parent = background

-- Loading bar fill
local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.Position = UDim2.new(0, 0, 0, 0)
barFill.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
barFill.Parent = barBackground

-- Loading percentage
local percent = Instance.new("TextLabel")
percent.Size = UDim2.new(1, 0, 1, 0)
percent.Position = UDim2.new(0, 0, 0, 0)
percent.Text = "0%"
percent.TextScaled = true
percent.TextColor3 = Color3.fromRGB(255, 255, 255)
percent.BackgroundTransparency = 1
percent.Font = Enum.Font.SourceSansBold
percent.Parent = barBackground

-- Animate loading bar endlessly
spawn(function()
    local progress = 0
    while true do
        progress = progress + 0.01
        if progress > 1 then
            progress = 0
        end
        barFill.Size = UDim2.new(progress, 0, 1, 0)
        percent.Text = math.floor(progress * 100) .. "%"
        wait(0.05)
    end
end)
